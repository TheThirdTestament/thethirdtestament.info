	Layout = "Master.cshtml";
}
<div class="row">
      <div class="col-12">
          <h1 class="contact-form-header">@Model.Title sign-up</h1>
    </div>
</div>
<div class="row">
    <div class="col-12 registration-form">
        @* Html.Action("Index", "NewsletterFormSurface") *@

        <!-- Begin Mailchimp Signup Form -->
