@inherits Umbraco.Web.Mvc.UmbracoViewPage<SimpleGridLayout>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
}

<div class="row" id="simple-grid-page-header">
    <div class="col-12">
        <h1>@Html.Raw(Model.Content.Title.Replace("\\n", "<br />"))</h1>
    </div>
</div>


@Html.GetGridHtml(Model.Content, "mainContent", "bootstrap3")