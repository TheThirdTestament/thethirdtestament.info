@model TheThirdTestament.ViewModels.ContactMessage
@{
                /**/

                Layout = null;
}
@if (TempData["success"] == null)
{

            using (Html.BeginUmbracoForm("HandleFormSubmit", "ContactFormSurface", new object { }, new { @class = "form-horizontal" }))
            {

            <div class="form-group row">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Subject, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Message, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control", rows= "6", placeholder = "Your message" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-5 offset-sm-2">
                    <button id="contact-submit" type="submit" class="btn btn-primary input-medium">Send</button>
                </div>
            </div>
                }
                }
                else
                {
                <p>Thank you for contacting us. We’ll be in touch soon!</p>
                }
